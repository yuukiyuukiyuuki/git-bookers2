<% if @book.errors.any? %>
<h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
 </ul>
<% end %>
<%= render 'users/user', book: @book, user: @user %>
<div class="col-md-8 offset-md-1">
<h3>Books</h3>
 <table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
   <tr>
     <td><%= link_to user_path(book.user_id) do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
     <td><%= link_to book_path(book.id) do %><p><%= book.title %></p><% end %></td>
     <td><%=book.body %></td>
   </tr>
  <% end %>
   </tbody>
 </table>
</div>
</div>
</div>