<h3>Books</h3>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
<tbody>
  <% @books.each do |book| %>
   <tr>
     <td><%=image_tag book.user.profile_image %></td>
     <td><%= link_to book.title,book_path(current_user.id) %></td>
     <td><%=book.body %></td>
   </tr>
 <% end %>
   </tbody>
 </table>