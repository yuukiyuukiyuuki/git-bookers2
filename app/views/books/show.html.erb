<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md3">
     <h3>User info</h3>
  <%=  image_tag @user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
   <tr>
    <th>name</th><th><%= @user.name %></th>
   </tr>
   <tr>
    <th>introduction</th><th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<p><%= link_to edit_user_path do %></p>
<i class="fas fa-user-cog"></i>
<% end %>
<h2>New book</h2>
<%= form_with model: @newbook do |f| %>
  <h6>Title</h6>
    <%= f.text_field :title %>
  <h6>Opinion</h6>
    <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %>
<% end %>
</div>
<div class="col-md3">
  <h3>Book detail</h3>
  <table class="table">
   <tbody>
    <tr>
     <td><%=image_tag @user.profile_image %>
     <br><%= link_to @user.name,user_path(@user.id) %></td>
     <td><%= link_to @book.title,book_path(@book.id) %></td>
     <td><%=@book.body %></td>
     <td><%= link_to 'Edit',edit_book_path(@book.id)%></td>
     <% if @book.user == current_user %>
     <td><%= link_to 'Destroy',book_path, method: :delete, "data-confirm" => "本当に消しますか？" %></td>
   <% end %>
   </tr>
   </tbody>
  </table>
</div>
</div>
</div>
