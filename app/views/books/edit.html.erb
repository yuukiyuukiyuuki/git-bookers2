<h2>Editing Book</h2>
<%= form_with model: @books do |f| %>
  <label for="book_title">Title</label>
  <p><%= f.text_field :title %></p>
  <br>
  <label for="book_body">Opinion</label>
  <p><%= f.text_area :body %></p>
  <br><%= f.submit "Update Book" %>
<% end %>

<p><%= link_to 'Show',book_path(@user) %> | <%= link_to 'Back',"/books" %></p>