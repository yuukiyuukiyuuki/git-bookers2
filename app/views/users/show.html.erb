<h3>User info</h3>
<div>
  <%=  image_tag @user.get_profile_image(100,100) %>
<table class="table">  
  <tbody>
   <tr>
    <th>name</th><th><%= @user.name %></th>
   </tr>
   <tr>
    <th>introduction</th><th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
 </div>
</div>
<p><%= link_to 'プロフィール編集', edit_user_path %></p>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %>
<% end %>