<h2>User info</h2>
<% if @user.errors.any? %>
  <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
<%= form_with model: @user do |f| %>
  <label for="user_Name">Name</label>
  <p><%= f.text_field :name%></p>
  <br>
  <label for="user_Image">Image</label>
  <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
  <label for="user_Introduction">Introduction</label>
  <p><%= f.text_area :introduction %></p>
  <br><%= f.submit "Update User" %>
<% end %>