<h3>User info</h3>
  <%=  image_tag @user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
   <tr>
    <th>name</th><th><%= @user.name %></th>
   </tr>
   <tr>
    <th>introduction</th><th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<p><%= link_to 'プロフィール編集', edit_user_path %></p>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h6>Title</h6>
    <%= f.text_field :title %>
  <h6>Opinion</h6>
    <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %>
<% end %>

<h3>Users</h3>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
<tbody>
  <% @users.each do |user| %>
   <tr>
     <td><%=image_tag user.profile_image %></td>
     <td><%=user.name %></td>
     <td><%= link_to 'Show', user_path(current_user.id)%></td>
   </tr>
 <% end %>
   </tbody>
 </table>